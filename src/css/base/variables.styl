//========================
// Breakpoints
//========================
$mq_vars = {
    bp-1: '(min-width: 30em)'
    bp-2: '(min-width: 45em)'
    bp-3: '(min-width: 60em)'
}

//========================
// Type Scale
//========================
$root-size = 16px
$root-lh = 1.5

$type-scale = {
    base: $root-size
    medium: 18px
    large: 24px
    x-large: 52px
}

//========================
// Typefaces
//========================
$sans = Helvetica, Arial, sans-serif
$serif = Georgia, Times, serif
$benton = Benton, Helvetica, Arial, sans-serif
$miller = Miller, Georgia, Times, serif
$miller-banner = Miller-Banner, Georgia, Times, serif

$regular = 400
$bold = 700


//========================
// Misc
//========================
$ease = 0.2s ease-in-out all

//========================
// Project Colors
//========================
$offblack = #333
$offwhite = #efefef
$lt-gray = #eee
$dem = rgb(89, 136, 157)
$gop = rgb(191, 97, 81)
$winner = #8fb545
$border = 1px solid $lt-gray

$parties = {
		democratic: $dem
		republican: $gop
}