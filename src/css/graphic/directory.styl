//========================
// Directory
//========================
.dir
	position relative
	
	&--list
		list-style-type none
		margin-bottom 2em
		
		+mq('bp-2')
			column-count 2
	
	&--date
		font($benton, $bold)
		color $offblack
		display block
		border-bottom 2px solid #ccc
		background-color #efefef
		margin-bottom 1em
		font-size 0.75em
		padding 0 1em
		// text-align center
		
		&:before
			content ''
			display inline-block
			background url($assets-path + 'img/cal.svg') no-repeat
			width image-size($assets-path + 'img/cal.svg')[0] + 1px
			height image-size($assets-path + 'img/cal.svg')[1]
			margin-right 0.5em
			opacity 0.6
	
	&--item
		margin-bottom 1em

	&--link
		font($benton, $bold)
	
	&--poll
		
		&-winner
			font-size 0.75em
			display inline-block
			border 1px solid #efefef
			border-radius 3px
			font($benton, $bold)
			padding 0 1em
		span
			font-weight $regular


// Party specific styles
for party, color in $parties
	.dir--{party} a
		color color
		
		&:hover
			color darken(color, 20)